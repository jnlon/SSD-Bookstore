@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center mt-5">
    <form
        method="post"
        asp-controller="account"
        asp-action="login"
        asp-route-returnurl="@ViewData["ReturnUrl"]"
        class="bg-light p-4"
        style="width: 40em">
        <div class="text-center form-title font-weight-bold">Bookstore Login</div>
        <div class="form-group">
            <label for="username">Email or Username</label>
            <input id="username" class="w-100 form-control" type="text" name="username" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="w-100 form-control" type="password" name="password" placeholder="********">
        </div>
        <div class="text-center mt-3 form-group">
            <input style="width: 40%;" class="form-control mx-auto" type="submit" name="login" value="Login">
        </div>

        <p class="text-danger"> @ViewData["Error"] </p>
    </form>
</div>