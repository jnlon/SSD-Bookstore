@{
    ViewData["Title"] = "Create User";
    string? error = ViewData.ContainsKey("Error") ? ViewData["Error"] as string : null;
}

<div class="m-3">
    <h1>Add New User</h1>
    <form class="d-block w-50" method="POST">
        <div class="form-group">
            <label for="username">Email or Username</label>
            <input name="username" type="text" id="username" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" id="password" class="form-control">
        </div>
        <div class="form-group">
            <label for="confirm-password">Confirm Password</label>
            <input name="confirm-password" type="password" id="confirm-password" class="form-control">
        </div>
        <div class="form-group">
            <label for="is-admin" class="m-0">
                <input name="is-admin" id="is-admin" type="checkbox" value="true" class="form-control d-inline-block w-auto h-auto">
                User Account is Administrator
            </label>
        </div>
        <div class="form-group">
            <input type="submit" name="Add User" class="form-control btn btn-success w-50" value="Add New User">
        </div>
    </form>
</div>
